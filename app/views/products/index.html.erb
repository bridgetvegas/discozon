<div class="container-header">
  <div class="container-header-text">
  <h1> Discozon</h1>
  <h3> <i>The place for all your disco needs </i></h3>
  </div>
</div>

<div class="container">
    <% @products.each do |product| %>
    <div class="container-2">
     <div><p><%= image_tag product.show_photo %></p></div>
     <div><p class="product-title"><h5><%= product.name %></h5></p></div>
     <div><p class="price">$<%= product.our_price %></p></div>
     <div><p class="show"><%= link_to 'Show', product %></p></div>
     </div>
     <% end %>
     </div>





